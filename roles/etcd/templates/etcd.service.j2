[Unit]
Description=etcd
Documentation=https://etcd.io
After=network.target

[Service]
ExecStart=/usr/local/bin/etcd \
  --name {{ inventory_hostname }} \
  --data-dir {{ etcd_data_dir }} \
  --listen-client-urls https://{{ ansible_host }}:{{ etcd_client_port }} \
  --advertise-client-urls https://{{ ansible_host }}:{{ etcd_client_port }} \
  --listen-peer-urls https://{{ ansible_host }}:{{ etcd_peer_port }} \
  --initial-advertise-peer-urls https://{{ ansible_host }}:{{ etcd_peer_port }} \
  --cert-file={{ etcd_cert_dir }}/server-{{ inventory_hostname }}.crt \
  --key-file={{ etcd_cert_dir }}/server-{{ inventory_hostname }}.key \
  --trusted-ca-file={{ etcd_cert_dir }}/ca.crt \
  --peer-cert-file={{ etcd_cert_dir }}/server-{{ inventory_hostname }}.crt \
  --peer-key-file={{ etcd_cert_dir }}/server-{{ inventory_hostname }}.key \
  --peer-trusted-ca-file={{ etcd_cert_dir }}/ca.crt \
  --client-cert-auth \
  --peer-client-cert-auth \
  --initial-cluster-token etcd-cluster \
  --initial-cluster {{ groups['etcd'] | map('extract', hostvars, ['ansible_host']) | join(',') }} \
  --initial-cluster-state new

Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
